<!DOCTYPE html>
<html>
  <head>
    <title>DiscogsFollow</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <div id="user-box">
        <div id="user-email">
          <%= current_user.email %>
        </div>
        <div id="user-logout">
          <%= link_to "logout", logout_path, method: :delete, class: "link-gray" %>
        </div>
      </div>
    <% end %>

    <div id="mainframe">
      <div id="mainwrapper">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
