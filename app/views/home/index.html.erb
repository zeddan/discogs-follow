<p id="notice"><%= notice %></p>

<%= link_to "+ add artist", new_custom_artist_follow_path, class: "add-artist" %>

<% unless current_user.artist_follows.empty? %>
  <table>
    <thead>
      <tr>
        <th>artist</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% current_user.artist_follows.each do |follow| %>
        <tr>
          <td>
            <%= link_to follow.followable.name, edit_artist_path(follow.followable),
                class: "artist-link" %>
          </td>
          <td>
            <%= link_to "unfollow",
                        artist_follow_path(follow.followable_id, follow.id),
                        method: :delete,
                class: "link-gray" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
